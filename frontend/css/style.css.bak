/* 高亮搜索结果 */
mark {
    background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
    color: #333;
    padding: 2px 4px;
    border-radius: 3px;
    font-weight: 600;
}

/* 确保卡片和侧边栏的z-index低于下拉菜单 */
.card {
    position: relative;
    z-index: 1;
}

#sidebarColumn {
    position: relative;
    z-index: 1;
}

#sidebarColumn .card {
    position: relative;
    z-index: 1;
}

/* 确保导航栏和下拉菜单的z-index最高 */
.navbar {
    position: relative;
    z-index: 1000;
}

.dropdown {
    position: relative;
    z-index: 10000;
}

.dropdown-menu.show {
    z-index: 10001 !important;
}

/* 响应式调整 */
@media (max-width: 768px) {
    .protocol-selector {
        padding: 0.875rem 1rem;
    }

    .protocol-selector>div {
        flex-direction: column;
        gap: 0.75rem;
        align-items: flex-start !important;
    }

    .protocol-toggle-group {
        width: 100%;
        flex-direction: column;
    }

    .protocol-btn {
        width: 100%;
        justify-content: center;
    }
}

@media (max-width: 992px) {
    .navbar {
        border-radius: 8px;
    }

    .navbar-nav {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        padding: 0.5rem;
        margin-top: 0.5rem;
    }

    .dropdown-menu {
        background: rgba(255, 255, 255, 0.95);
    }
}